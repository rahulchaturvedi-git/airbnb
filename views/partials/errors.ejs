<!--TO SHOW ERROR MESAGES-->
<% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
  <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg relative animate-fade-in" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="flex items-start">
      <div class="mr-3">
        <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
        </svg>
      </div>
      <div class="flex-1">
        <strong class="font-semibold">Please fix the following:</strong>
        <ul class="list-disc list-inside mt-2 space-y-1">
          <% errors.forEach(function(error){ %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
      <button type="button" class="absolute top-2 right-2 text-red-400 hover:text-red-600 focus:outline-none" onclick="this.closest('[role=alert]').remove()" aria-label="Dismiss error">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% } %>