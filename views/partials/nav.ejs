<header class="bg-gradient-to-r from-red-600 to-red-500 text-white shadow-lg border-b-4 border-red-700">
  <nav class="container mx-auto px-4 py-3">
    <!-- Desktop Navigation -->
    <div class="hidden md:flex justify-between items-center">
      <!-- Logo/Brand -->
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center">
          <span class="text-red-600 font-bold text-lg">A</span>
        </div>
        <a href="/" class="text-2xl font-bold hover:text-red-200 transition duration-300">
          airbnb
        </a>
      </div>

      <!-- Navigation Links -->
      <div class="flex items-center space-x-1">
        <% if (isLoggedIn) { %>
          <% if (user && user.userType === 'guest') { %>
              <a href="/homes" 
                class="<%= currentPage === 'Home' ? 'bg-red-700 text-white' : 'hover:bg-red-700 hover:text-white' %> px-4 py-2 rounded-lg transition-all duration-300 font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <span>Homes</span>
              </a>
              
              <a href="/favourites" 
                class="<%= currentPage === 'favourites' ? 'bg-red-700 text-white' : 'hover:bg-red-700 hover:text-white' %> px-4 py-2 rounded-lg transition-all duration-300 font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <span>Favourites</span>
              </a>
              
              <a href="/bookings" 
                class="<%= currentPage === 'bookings' ? 'bg-red-700 text-white' : 'hover:bg-red-700 hover:text-white' %> px-4 py-2 rounded-lg transition-all duration-300 font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>Bookings</span>
              </a>
          <% } else { %>
              <a href="/host/host-home-list" 
                class="hover:bg-red-700 hover:text-white px-4 py-2 rounded-lg transition-all duration-300 font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <span>My Homes</span>
              </a>
              
              <a href="/host/add-home" 
                class="hover:bg-red-700 hover:text-white px-4 py-2 rounded-lg transition-all duration-300 font-medium flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                <span>Add Home</span>
              </a>
          <% } %>
         <% } %>
      </div>

      <!-- Auth Section -->
      <div class="flex items-center space-x-3">
        <% if (!isLoggedIn) { %>
          <a href="/signup" 
             class="bg-white text-red-600 px-4 py-2 rounded-lg font-medium hover:bg-gray-100 transition-all duration-300 border-2 border-white hover:border-gray-200">
            Sign Up
          </a>
          <a href="/login" 
             class="border-2 border-white text-white px-4 py-2 rounded-lg font-medium hover:bg-white hover:text-red-600 transition-all duration-300">
            Login
          </a>
        <% } else { %>
          <div class="relative group">
            <button class="flex items-center space-x-2 bg-red-700 px-4 py-2 rounded-lg hover:bg-red-800 transition-all duration-300">
              <div class="w-6 h-6 bg-white rounded-full flex items-center justify-center">
                <span class="text-red-600 font-bold text-sm">U</span>
              </div>
              <span class="font-medium">Account</span>
              <svg class="w-4 h-4 transform group-hover:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
              <form action="/logout" method="POST" class="block">
                <button type="submit" 
                        class="w-full text-left px-4 py-2 text-gray-800 hover:bg-red-50 rounded-lg transition duration-200">
                  Logout
                </button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden">
      <div class="flex justify-between items-center">
        <!-- Mobile Logo -->
        <div class="flex items-center space-x-2">
          <div class="w-6 h-6 bg-white rounded-full flex items-center justify-center">
            <span class="text-red-600 font-bold text-sm">A</span>
          </div>
          <a href="/" class="text-xl font-bold hover:text-red-200 transition duration-300">
            airbnb
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="text-white hover:text-red-200 transition duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden mt-4 pb-4 border-t border-red-400">
        <% if (isLoggedIn) { %>
          <div class="flex flex-col space-y-2 mt-4">
            <a href="/homes" 
               class="<%= currentPage === 'Home' ? 'bg-red-700 text-white' : 'hover:bg-red-700 hover:text-white' %> px-4 py-3 rounded-lg transition-all duration-300 font-medium flex items-center space-x-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <span>Homes</span>
            </a>
            
            <a href="/favourites" 
               class="<%= currentPage === 'favourites' ? 'bg-red-700 text-white' : 'hover:bg-red-700 hover:text-white' %> px-4 py-3 rounded-lg transition-all duration-300 font-medium flex items-center space-x-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span>Favourites</span>
            </a>
            
            <a href="/bookings" 
               class="<%= currentPage === 'bookings' ? 'bg-red-700 text-white' : 'hover:bg-red-700 hover:text-white' %> px-4 py-3 rounded-lg transition-all duration-300 font-medium flex items-center space-x-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span>Bookings</span>
            </a>
            
            <a href="/host/host-home-list" 
               class="hover:bg-red-700 hover:text-white px-4 py-3 rounded-lg transition-all duration-300 font-medium flex items-center space-x-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <span>My Homes</span>
            </a>
            
            <a href="/host/add-home" 
               class="hover:bg-red-700 hover:text-white px-4 py-3 rounded-lg transition-all duration-300 font-medium flex items-center space-x-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              <span>Add Home</span>
            </a>
            
            <form action="/logout" method="POST" class="block">
              <button type="submit" 
                      class="w-full text-left hover:bg-red-700 hover:text-white px-4 py-3 rounded-lg transition-all duration-300 font-medium flex items-center space-x-3">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                <span>Logout</span>
              </button>
            </form>
          </div>
        <% } else { %>
          <div class="flex flex-col space-y-3 mt-4">
            <a href="/signup" 
               class="bg-white text-red-600 px-4 py-3 rounded-lg font-medium hover:bg-gray-100 transition-all duration-300 text-center">
              Sign Up
            </a>
            <a href="/login" 
               class="border-2 border-white text-white px-4 py-3 rounded-lg font-medium hover:bg-white hover:text-red-600 transition-all duration-300 text-center">
              Login
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>