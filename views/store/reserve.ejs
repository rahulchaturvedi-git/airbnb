<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <%- include('../partials/nav') %>
    
    <!-- Success Header -->
    <section class="bg-gradient-to-r from-green-600 to-green-500 text-white py-16">
      <div class="container mx-auto px-4 text-center">
        <div class="flex items-center justify-center mb-4">
          <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mr-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold">Booking Confirmed!</h1>
        </div>
        <p class="text-xl text-green-100 max-w-2xl mx-auto">
          Your reservation has been successfully created
        </p>
      </div>
    </section>

    <!-- Booking Details -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <!-- Success Card -->
          <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mb-8">
            <div class="text-center mb-8">
              <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h2 class="text-2xl font-bold text-gray-800 mb-2">Reservation Successful!</h2>
              <p class="text-gray-600">Your booking has been confirmed and you'll receive a confirmation email shortly.</p>
            </div>

            <!-- Booking Summary -->
            <div class="bg-gray-50 rounded-xl p-6 mb-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-4">Booking Summary</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <p class="text-sm text-gray-600 mb-1">Property</p>
                  <p class="font-semibold text-gray-800"><%= home.houseName %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 mb-1">Location</p>
                  <p class="font-semibold text-gray-800"><%= home.location %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 mb-1">Check-in</p>
                  <p class="font-semibold text-gray-800"><%= checkIn %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 mb-1">Check-out</p>
                  <p class="font-semibold text-gray-800"><%= checkOut %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 mb-1">Guests</p>
                  <p class="font-semibold text-gray-800"><%= guests %> guest(s)</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 mb-1">Total Price</p>
                  <p class="font-semibold text-green-600 text-lg">â‚¹<%= totalPrice %></p>
                </div>
              </div>
            </div>

            <!-- Next Steps -->
            <div class="border-t border-gray-200 pt-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-4">What's Next?</h3>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <span class="text-blue-600 text-sm font-semibold">1</span>
                  </div>
                  <div>
                    <p class="font-medium text-gray-800">Confirmation Email</p>
                    <p class="text-sm text-gray-600">You'll receive a detailed confirmation email with all booking information.</p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <span class="text-blue-600 text-sm font-semibold">2</span>
                  </div>
                  <div>
                    <p class="font-medium text-gray-800">Host Contact</p>
                    <p class="text-sm text-gray-600">Your host will contact you with check-in instructions and property details.</p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <span class="text-blue-600 text-sm font-semibold">3</span>
                  </div>
                  <div>
                    <p class="font-medium text-gray-800">Enjoy Your Stay</p>
                    <p class="text-sm text-gray-600">Have a wonderful time at your chosen property!</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/bookings" class="bg-gradient-to-r from-green-500 to-green-600 text-white px-8 py-4 rounded-lg font-semibold hover:from-green-600 hover:to-green-700 transition-all duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              View My Bookings
            </a>
            <a href="/homes" class="bg-gradient-to-r from-gray-800 to-gray-900 text-white px-8 py-4 rounded-lg font-semibold hover:from-gray-900 hover:to-black transition-all duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              Explore More Properties
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Decorative Elements -->
    <div class="fixed top-0 left-0 w-full h-full pointer-events-none overflow-hidden">
      <div class="absolute top-20 left-10 w-32 h-32 bg-green-200 rounded-full opacity-20"></div>
      <div class="absolute bottom-20 right-10 w-24 h-24 bg-blue-200 rounded-full opacity-20"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-green-100 rounded-full opacity-30"></div>
    </div>
  </body>
</html>
