<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <%- include('../partials/nav') %>
    
    <!-- Page Header -->
    <section class="bg-gradient-to-r from-red-600 to-red-500 text-white py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Discover Amazing Places</h1>
        <p class="text-xl text-red-100 max-w-2xl mx-auto">
          Explore our curated collection of beautiful homes and find your perfect stay
        </p>
      </div>
    </section>

    <!-- Homes Grid -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <!-- Search and Filter Bar -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
          <div class="flex flex-col md:flex-row gap-4 items-center">
            <div class="flex-1">
              <div class="relative">
                <input type="text" placeholder="Search homes..." class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent">
                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
            </div>
            <div class="flex gap-3">
              <select class="px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                <option>Price Range</option>
                <option>₹0 - ₹1000</option>
                <option>₹1000 - ₹2000</option>
                <option>₹2000+</option>
              </select>
              <select class="px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                <option>Rating</option>
                <option>4+ Stars</option>
                <option>3+ Stars</option>
                <option>2+ Stars</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Results Count -->
        <div class="flex justify-between items-center mb-8">
          <p class="text-gray-600">Showing <span class="font-semibold text-gray-800"><%= registeredHomes.length %></span> homes</p>
          <div class="flex items-center space-x-2">
            <span class="text-gray-600">Sort by:</span>
            <select class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
              <option>Recommended</option>
              <option>Price: Low to High</option>
              <option>Price: High to Low</option>
              <option>Rating</option>
            </select>
          </div>
        </div>

        <!-- Homes Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          <% registeredHomes.forEach(home => { %>
            <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
              <!-- Image Container -->
              <div class="relative overflow-hidden">
                <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500">
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                
                <!-- Price Badge -->
                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-2 rounded-full shadow-lg">
                  <span class="text-lg font-bold text-red-600">₹<%= home.price %></span>
                  <span class="text-sm text-gray-600">/night</span>
                </div>
                
                <!-- Rating Badge -->
                <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-2 rounded-full flex items-center space-x-1 shadow-lg">
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="font-semibold text-gray-800"><%= home.rating %></span>
                </div>

                <!-- Quick Actions Overlay -->
                <div class="absolute bottom-4 left-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="flex space-x-2">
                    <%- include('../partials/favourite', {home: home}) %>
                    <a href="/homes/<%= home._id %>" class="flex-1 bg-white/90 backdrop-blur-sm text-gray-800 py-2 px-4 rounded-lg font-semibold text-center hover:bg-white transition-all duration-300">
                      View Details
                    </a>
                  </div>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-red-600 transition-colors duration-300">
                  <%= home.houseName %>
                </h3>
                <p class="text-gray-600 mb-4 flex items-center">
                  <svg class="w-4 h-4 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <%= home.location %>
                </p>
                
                <!-- Action Buttons -->
                <div class="flex space-x-3">
                  <a href="/homes/<%= home._id %>" class="flex-1 bg-gradient-to-r from-red-500 to-red-600 text-white py-3 px-4 rounded-lg font-semibold text-center hover:from-red-600 hover:to-red-700 transition-all duration-300 transform hover:scale-105">
                    View Details
                  </a>
                  <%- include('../partials/favourite', {home: home}) %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center mt-12">
          <nav class="flex items-center space-x-2">
            <a href="#" class="px-4 py-2 text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
              Previous
            </a>
            <a href="#" class="px-4 py-2 bg-red-600 text-white rounded-lg">1</a>
            <a href="#" class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">2</a>
            <a href="#" class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">3</a>
            <a href="#" class="px-4 py-2 text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
              Next
            </a>
          </nav>
        </div>
      </div>
    </section>
  </body>
</html>
